
int horas, a;
float pagar;

int main(){
	a = 1;
	while(a = 1){
	printf("Ingrese las horas trabajadas:");
	scanf("%d",&horas);
		if(horas >= 0 && horas <= 40){
			pagar = horas * 10;
			printf("El sueldo a pagar es de: %.2f", pagar);
			a = 0;
			return 0;
		}else{
			if(horas > 40){
				pagar = 40 * 10 + (horas - 40) * 1.5 * 10;
				printf("El sueldo a pagar es de: %.2f", pagar);
				a = 0;
				return 0;
			}else{
				printf("Valor ingresado es invalido,");
				a = 1;
			}
		}
	}
}
