#include <stdio.h>

int cantDias, idaYvuelta;
float precio;

int main(){
	printf("Ingrese los dias que faltan para su vuelo:");
	scanf("%d",&cantDias);
	printf("Ingrese 0 si quiere pasaje solo para la ida y 1 si es de ida y vuelta:");
	scanf("%d",&idaYvuelta);
	if(cantDias >= 1 && cantDias <= 14){
		precio = 2875;
	}else{
		if(cantDias >= 15 && cantDias <= 29){
			precio = 2350;
		}else{
			precio = 1650;
		}
	}
	if(idaYvuelta == 1){
		precio = precio * 2;
	}
	printf("El precio total es de %.2f", precio);
	return 0;
}
