#include <stdio.h>

int mes, cantDias;

int main(){
	printf("Ingrese el numero del mes que desee averigurar la cantidad de dias:");
	scanf("%d",&mes);

	if(mes == 4 || mes == 6 || mes == 9 || mes == 11){
		cantDias = 30;
		printf("El mes elegido tiene: %d", cantDias);
	}else{
		if(mes == 2){
			cantDias = 28;
			printf("El mes elegido tiene: %d", cantDias);
		}else{
			if(mes == 1 || mes == 3 || mes == 5 || mes == 7 || mes == 8 || mes == 10 || mes == 12){
				cantDias = 31;
				printf("El mes elegido tiene: %d", cantDias);
			}else{
				printf("El mes elegido es invalido");
			}
		}
	}
	return 0;
}
