#include <stdio.h>
#include <string.h>

int puntos;
char resC1[21] = "Donatelo\n";
char resC2[21] = "La piedad\n";
char resC3[21] = "Rafael\n";

void main(){
	char res1[21], res2[21], res3[21];
	printf("Ingrese la respuesta 1: ");
	fgets(res1,21,stdin);
	printf("Ingrese la respuesta 2: ");
	fgets(res2,21,stdin);
	printf("Ingrese la respuesta 3: ");
	fgets(res3,21,stdin);
	puntos = 0;
	if((strcmp(res1, resC1)) == 0){
		puntos = puntos + 100;
	}
	if((strcmp(res2, resC2)) == 0){
		puntos = puntos + 100;
	}
	if((strcmp(res3, resC3)) == 0){
		puntos = puntos + 100;
	}
	printf("Total de puntaje es de: %d puntos.", puntos);
}
