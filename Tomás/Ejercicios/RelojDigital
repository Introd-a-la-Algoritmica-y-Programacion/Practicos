#include <stdio.h>

int h, m, s;

int main(){

	printf("Ingrese la hora en valor numerico de la siguiente manera: hora minutos segundos\n");
	scanf("%d%d%d", &h, &m, &s);

	if(h <= 0 || h > 24 || m < 0 || m > 60 || s < 0 || s > 60){
		printf("La hora ingresada es incorrecta.\n");
		return 0;
	}

	s = s + 1;

	if(s > 59){
		m = m + 1;
		s = 0;
	}

	if(m > 59){
		h = h + 1;
		m = 0;
	}

	if(h > 23){
		h = 0;
	}

	printf("La hora un segundo despues es: %d:%d:%d.\n", h, m, s);
	return 0;
}
