#include <stdio.h>
#include <string.h>

int main()
{
	int c1numero, c2numero, c3numero = 0;
	char c1palo[50], c2palo[50], c3palo[50];

		printf("\nPalo de la primer carta: ");
		fgets(c1palo,50,stdin);

	while(c1numero == 0 || c1numero < 1 || c1numero > 12)
	{
		printf("Numero de la primer carta: ");
		scanf("%d",&c1numero);
		if(c1numero < 1 || c1numero > 12)
		{
			printf("Repita el ");
		}
		{
			while(getchar() != '\n');
		}
	}

		printf("\nPalo de la segunda carta: ");
		fgets(c2palo,50,stdin);

	while(c2numero == 0 || c2numero < 1 || c2numero > 12)
	{
		printf("Numero de la segunda carta: ");
		scanf("%d",&c2numero);
		if(c2numero < 1 || c2numero > 12)
		{
			printf("Repita el ");
		}
		{
			while(getchar() != '\n');
		}
	}

		printf("\nPalo de la tercer carta: ");
		fgets(c3palo,50,stdin);

	while(c3numero == 0 || c3numero < 1 || c3numero > 12)
	{
		printf("Numero de la tercer carta: ");
		scanf("%d",&c3numero);
		if(c3numero < 1 || c3numero > 12)
		{
			printf("Repita el ");
		}
		{
			while(getchar() != '\n');
		}
	}

	if((strcmp(c1palo, c2palo) == 0) && strcmp(c2palo, c3palo) == 0)
	{
		printf("\n1\n\n");
	}else{
		if((strcmp(c1palo, c2palo) == 0) || strcmp(c2palo, c3palo) == 0 || strcmp(c3palo, c1palo) == 0)
		{
			printf("\n2\n\n");
		}else{
			printf("\n0\n\n");
		}
	}
}
