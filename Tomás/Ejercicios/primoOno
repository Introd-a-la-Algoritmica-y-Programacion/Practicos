#include <stdio.h>

int n, i;

int main(){

	printf("Ingrese el numero del que desee conocer si es primo o no:\n");
	scanf("%d",&n);

	if((n % 2 == 0 && n != 2) || n == 1){
		printf("El numero no es primo.\n");
		return 0;
	}

	if(n == 2){
		printf("El numero es primo.\n");
		return 0;
	}

	if(!(n % 2 == 0 && n != 1) || n == 2){
		for(i = 2; i < n; i + 1){
			if(i % n == 0){
				printf("El numero no es primo.\n");
				return 0;
			}else{
				if((i % n != 0) || n == 2){
					printf("El numero es primo.\n");
					return 0;
				}
			}
		}
	}
}
