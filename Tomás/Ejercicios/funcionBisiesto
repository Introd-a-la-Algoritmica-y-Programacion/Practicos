#include <stdio.h>

int anio, aux;
int bisiesto(int anio);

int main()
{
	printf("\nIngrese un anio para saber si es bisiesto o no: ");
	scanf("%d",&anio);
	bisiesto(anio);
	if(aux == 1)
	{
		printf("\nEl anio es bisiesto.\n\n");
	}else{
		if(aux == 2)
		{
			printf("\nEl anio no es bisiesto.\n\n");
		}
	}
}

int bisiesto(int anio)
{
	if(anio % 4 == 0)
	{
		aux = 1;
	}else{
		aux = 2;
	}
	return 0;
}
