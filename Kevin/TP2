#include <stdio.h>
#include <string.h>

const int Pi=3.14;
int diametro;
int altura;
int radio;
int supPared;
int litrosPintura;

void main(){
	printf("\nIntroducir tamanio del diametro:");
	scanf("%d",&diametro);
	printf("\nIntroducir tamanio de altura:");
	scanf("%d",&altura);
	radio = diametro / 2;
	supPared = 2 * Pi * radio * altura;
	litrosPintura = (supPared / 5) * 2;
	printf("\nLa cantidad de pintura necesaria es:%d \n", litrosPintura);
}
